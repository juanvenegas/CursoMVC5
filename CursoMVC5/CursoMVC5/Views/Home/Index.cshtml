{
    HttpMethod = "Post",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "spanDuplicadoAjax"
}))
{
    <input type="number" name="cantidad" /><input type="submit" value="Duplicar" />
}
Resultado <span id="spanDuplicadoAjax"></span>

