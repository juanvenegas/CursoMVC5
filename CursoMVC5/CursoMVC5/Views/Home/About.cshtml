@{
    ViewBag.Title = "About";
}

<h3>Ejemplo 1 : Ajax.ActionLink Basico - Cargar una seccion</h3>

@Ajax.ActionLink("Cargar Sección", "SeccionPruebaAjaxActionLink", new AjaxOptions()
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "resultado"
})
<div id="resultado"></div>

<h3>Ejemplo 2 : Ajax.ActionLink RouteValues, HtmlAttributes</h3>

@Ajax.ActionLink("Cargar Sección", "SeccionPruebaAjaxActionLinkExample2", null, new AjaxOptions()
{
    HttpMethod = "GET",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "resultado2"
}, new { @class = "btn btn-success" });
<div id="resultado2"></div>



@section scripts{
    
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


}