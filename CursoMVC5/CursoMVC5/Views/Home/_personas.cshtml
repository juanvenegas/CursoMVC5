@model List<CursoMVC5.Controllers.HomeController.Persona>

@if(Model.Count == 0)
{
    <p>No existen resultados para mostrar.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <td>Nombre</td>
                <td>Edad</td>
            </tr>
        </thead>
        <tbody>
            @foreach(var persona in Model)
            {
                <tr>
                    <td>@persona.Nombre</td>
                    <td>@persona.Edad</td>
                </tr>
            }
        </tbody>
    </table>
}
